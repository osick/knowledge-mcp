# Remote RAG Server Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# Azure OpenAI Configuration
# ============================================================================
# Your Azure OpenAI API key (required)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here

# Azure OpenAI endpoint URL (required)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Deployment name for embeddings model
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Azure OpenAI API version
AZURE_OPENAI_API_VERSION=2024-02-01

# Embedding vector dimensions (1536 for text-embedding-3-small)
AZURE_OPENAI_EMBEDDING_DIMENSIONS=1536

# ============================================================================
# Qdrant Configuration
# ============================================================================
# Qdrant server URL (required)
# For local: http://localhost:6333
# For cloud: https://your-cluster.qdrant.io
QDRANT_URL=https://your-qdrant-instance.example.com

# Qdrant API key (required)
QDRANT_API_KEY=your-qdrant-api-key-here

# Default collection name for storing documents
QDRANT_DEFAULT_COLLECTION=default

# ============================================================================
# API Configuration
# ============================================================================
# API key for authenticating requests (required)
# Generate a strong random key: openssl rand -hex 32
API_KEY=your-secret-api-key-here

# Server host address (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
API_HOST=0.0.0.0

# Server port
API_PORT=8000

# ============================================================================
# Chunking Configuration
# ============================================================================
# Maximum chunk size in characters
# Recommended: 512 for balanced performance and precision
CHUNK_SIZE=512

# Overlap between chunks in characters
# Recommended: 50 to maintain context between chunks
CHUNK_OVERLAP=50

# ============================================================================
# Logging Configuration
# ============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log output format
# - "json": Structured JSON logs (recommended for production)
# - "console": Human-readable colored logs (recommended for development)
LOG_FORMAT=json
